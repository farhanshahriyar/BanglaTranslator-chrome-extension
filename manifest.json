{
  "manifest_version": 3,
  "name": "TransBanglaWebExt",
  "version": "1.0",
  "description": "Translate English content to Bangla on any webpage",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["assets/content.js"]
    }
  ]
}
